{
    "compilerOptions": {
      "target": "ES5",
      "module": "CommonJS",
      "moduleResolution": "Node",
      "noImplicitAny": false,
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "importHelpers": true,
      "composite": true,
      "strict": false,
      "jsx": "react",
      "skipLibCheck": true,
    },
    "include": ["./*"],
    "exclude": ["node_modules", "build"],
    "references": [
      {
        "path": "opt",
      },
      {
        "path": "ui"
      },
      {
        "path": "background"
      },
    ]
}